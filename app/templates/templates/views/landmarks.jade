extends ../layouts/default

mixin location(location)
	.location(data-ks-editable=editable(user, { list: 'Location', id: location.id }))
		h2: a(href='/landmarks/location/' + location.slug)= location.commonName
		p.lead.text-muted Added
			if location.publishedDate
				| on #{location._.publishedDate.format('MMMM Do, YYYY')}
		if location.heroImage.exists
			img(src=location._.heroImage.fit(160,160)).img.pull-right
		p!= location.description.brief
		if location.description.extended
			p.read-more: a(href='/landmarks/location/' + location.slug) Read more...

block intro
	.container
		h1= 'Landmarks'

block content
	.container: .row
		.col-sm-8.col-md-9
			if data.locations.results.length
				if data.locations.totalPages > 1
					h4.text-weight-normal Showing
						strong #{data.locations.first}
						|  to
						strong #{data.locations.last}
						|  of
						strong #{data.locations.total}
						|  locations.
				else
					h4.text-weight-normal Showing #{utils.plural(data.locations.results.length, '* location')}.
				.landmarks
					each location in data.locations.results
						+location(location)

				if data.locations.totalPages > 1
					ul.pagination
						if data.locations.previous
							li: a(href='?page=' + data.locations.previous): span.entypo.entypo-chevron-thin-left
						else
							li.disabled: a(href='?page=' + 1): span.entypo.entypo-chevron-thin-left
						each p, i in data.locations.pages
							li(class=data.locations.currentPage == p ? 'active' : null)
								a(href='?page=' + (p == '...' ? (i ? data.locations.totalPages : 1) : p ))= p
						if data.locations.next
							li: a(href='?page=' + data.locations.next): span.entypo.entypo-chevron-thin-right
						else
							li.disabled: a(href='?page=' + data.locations.totalPages): span.entypo.entypo-chevron-thin-right
			else
				h3.text-muted There are no locations yet.
